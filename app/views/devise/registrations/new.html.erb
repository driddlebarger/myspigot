<div class="wrapper">

 <div class="form-signin">
  <div class="form-group">
    <h2>Sign Up</h2>
    <p>You need to create a free account to post new locations on WaterSpotter.</p>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-control">
    <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
  </div>
  <div class="form-group">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-control">
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
  </div>
  <div clas="form-group">
      <small class="form-text text-muted">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
      </small>
  </div>

  <div class="form-control">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Re-type Password" %>
  </div>
  <br>
  <div class="form-group">
  <%= f.check_box :terms, {}, true, false %> I agree to the <%= link_to "Terms of Service", "https://termsfeed.com/terms-conditions/845f1860de26772353f5ecdbfdb06281", target: :_blank %>
  </div>

  <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"  %>

<% end %>

<div class="form-group">
<br>
<%= render "devise/shared/links" %>
</div>

</div>
</div>
