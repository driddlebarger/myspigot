<%= form_for @submission do |f| %>

   <div class="form-group">
      <div class="form-control">
      <%= f.text_field :name, required: true, placeholder: "Give it a name!", class: "input-block-level" %>
      </div>
    </div>

    <div class="form-group">
      <div class="form-control">
      <%= f.text_area :description, required: true, as: :text, rows: "3", placeholder: "Describe it! How can we find it? What's it next to? Does the water taste good?", class: "input-block-level" %>
      </div>
    </div>

    <!-- Hidden fields -->
    <div id="lat-long" class="hidden">
      <div class="form-control">
      <%= f.text_field :latitude, placeholder: "Latitude", id: "latitude" %>
      </div>

      <div class="form-control">
      <%= f.text_field :longitude, placeholder: "Longitude", id: "longitude" %> 
      </div>
    </div>

      <div class="hidden">
      <%= f.label :nickname %><br>
      <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>

      <div class="hidden">
      <%= f.label :email %><br>
      <%= f.text_field :email, :value => current_user.email %>
      </div>


    <div class="form-group">
    <%= f.submit 'Add to Map!', class: "btn btn-primary btn-block" %>
    <% end %>
    </div>
